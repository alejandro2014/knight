EXE=knight

BINDIR=./bin
OBJDIR=./obj
SRCDIR=./src

SRC01=widgets
SRC02=load_widgets_fake
SRC03=helper
SRC04=api
SRC05=hme_lowlevel
SRC06=main
SRC07=console
SRC08=generate_terrain

OBJ_LINUX=${OBJDIR}/${SRC01}.o ${OBJDIR}/${SRC02}.o ${OBJDIR}/${SRC03}.o ${OBJDIR}/${SRC04}.o ${OBJDIR}/${SRC05}.o ${OBJDIR}/${SRC06}.o ${OBJDIR}/${SRC07}.o ${OBJDIR}/${SRC08}.o

OBJ=${OBJ_LINUX}

${BINDIR}/${EXE}: ${OBJ}
	${CC} ${OBJ} -o ${BINDIR}/${EXE} ${OPTL}

${OBJDIR}/%.o: ${SRCDIR}/%.c
	${CC} ${OPTC} -c -o $@ $<

clean:
	rm -f ${OBJDIR}/*.o ${BINDIR}/${EXE}
